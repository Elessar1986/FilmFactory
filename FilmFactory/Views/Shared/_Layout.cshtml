
@using System.Threading;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
   
</head>
<body>
    <script>
        var _localCulture = '@Thread.CurrentThread.CurrentCulture.Name';

    </script>

       
           <div class="container">

               <div class="header clearfix">
                   <nav>
                       <ul class="nav nav-pills pull-right">
                           <li role="presentation" id="Main">@Html.ActionLink(@Resources.Resource.MainPage, "Index", "Home")</li>
                            <li role="presentation" class="dropdown" id="Film">
                               <a class="dropdown-toggle"  data-toggle="dropdown" href="/Film" role="button" aria-haspopup="true" aria-expanded="false">
                                   @Resources.Resource.Films<span class="caret"></span>
                               </a>
                               <ul class="dropdown-menu">
                                   <li role="presentation">@Html.ActionLink(@Resources.Resource.Top20, "Top", "Film")</li>
                                   <li role="presentation">@Html.ActionLink(@Resources.Resource.AllFilms, "Index", "Film") </li>
                               </ul>                                               
                          </li>
                           <li role="presentation" class="dropdown" id="Other">
                               <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                   @Resources.Resource.Other<span class="caret"></span>
                               </a>
                               <ul class="dropdown-menu">
                                   <li role="presentation">@Html.ActionLink(@Resources.Resource.Genres, "Index", "Genre")</li>
                                   <li role="presentation">@Html.ActionLink(@Resources.Resource.Director, "Index", "Genre")</li>
                               </ul>                                               
                          </li>
                       </ul>
                   </nav>
                   <h2 class="text-muted logo">Film Factory 1.0</h2> 
               </div>
               <hr/>
               <div class="text-right">
                   @Html.ActionLink("RU", "ChangeCulture", "Home", new { lang = "ru" }, null)
                   @Html.ActionLink("EN", "ChangeCulture", "Home", new { lang = "en" }, null)
               </div> 
           </div>

       <div class="container body-content">
           @RenderBody()
       </div>

       <div class="container footer-bg-color">
           <hr />
           <footer>
               <p>@Resources.Resource.Copyright</p>
           </footer>
       </div>

      
       @Scripts.Render("~/bundles/bootstrap")

       @RenderSection("scripts", required: false)

        @if (!string.IsNullOrEmpty(ViewBag.ActiveMenu))
        {
            <script type="text/javascript">
                $(function () {
                    $("li[id=@ViewBag.ActiveMenu]").addClass("active");
                });
            </script>
        }
</body>
</html>
