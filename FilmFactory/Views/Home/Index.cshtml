
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1>Главная страница</h1>
</div>

<div id="carouselTest" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="http://images.aif.ru/008/190/aaba551575993f2559945c2284bb6cdc.jpg" alt="Flower0" width="100%">
            <div class="carousel-caption">
                <h3>@Html.ActionLink(Resources.Resource.Top20,"Top","Film")</h3>
            </div>
        </div>

        <div class="item ">
            <img src="http://www.fainaidea.com/wp-content/uploads/2017/08/92985688.jpg" alt="Flower1" width="100%">
            <div class="carousel-caption">
                <h3>@Html.ActionLink(Resources.Resource.Films, "Index", "Film")</h3>
            </div>
        </div>


    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carouselTest" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carouselTest" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>


<script>
$(document).ready(function(){
    $("#carouselTest").carousel({interval: 3500});
    });
</script>


