@model IEnumerable<FilmFactory.FilmsData.FilmContract>

@{
    ViewBag.Title = Resources.Resource.Films;
}

<h2>@Resources.Resource.Films</h2>

<p>
    <button type="button" class="btn btn-success addModalBtn">@Resources.Resource.AddFilm</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName(Resources.Resource.Rate)
        </th>
        <th>
            @Html.DisplayName(Resources.Resource.Title)
        </th>
        <th>
            @Html.DisplayName(Resources.Resource.Year)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#editModal">@Resources.Resource.Edit</button>
                <button type="button" class="btn btn-info btn-sm detailsModalBtn">@Resources.Resource.Details</button>
                @Html.HiddenFor(modelItem => item.Id, new { @class = "filmId" })
                
            </div>
        </td>
    </tr>
}

</table>

<div id="modalPlace">

</div>

